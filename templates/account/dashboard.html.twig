{% extends 'account/layout.html.twig' %}

{% set section = 'Dashboard' %}{# Utilis√© dans account/layout.html.twig #}

{% block title %}Account - Dashboard{% endblock %}

{% block account %}
    <a href="{{ path('account_new_server') }}" class="btn btn-primary float-end">
        New server
    </a>

    <h2 class="mb-3">Servers</h2>

    {% for server in servers %}
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-3">
                <div class="card-body">
                    <h4 class="mb-3">
                        <a href="{{ path('account_server_detail', {'id': server.id}) }}">
                            {{ server.name }}
                        </a>
                    </h4>
                    <p>
                        <strong>IP</strong>
                        <span class="text-muted">{{ server.ip }}</span>
                    </p>
                    <p>
                        <strong>Status</strong>
                        {{ server|server_state_badge }}
                    </p>
                </div>
            </div>
            <div class="col-md-6 border-start">
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Datacenter</dt>
                        <dd class="col-sm-7">{{ server.location.name }}</dd>

                        <dt class="col-sm-5">Distribution</dt>
                        <dd class="col-sm-7">{{ server.distribution.name }}</dd>

                        <dt class="col-sm-5">CPU</dt>
                        <dd class="col-sm-7">{{ server.cpu }} Intel CPUs</dd>

                        <dt class="col-sm-5">RAM</dt>
                        <dd class="col-sm-7">{{ server.ram }} GB</dd>
                    </dl>
                </div>
            </div>
            <div class="col-md-3 border-start">
                <div class="card-body">
                    <a class="btn btn-primary mb-3" href="{{ path('account_server_reboot', {'id': server.id}) }}">
                        Restart
                    </a>
                    <br>
                    <a class="btn btn-light" href="{{ path('account_server_reset', {'id': server.id}) }}">
                        Reset
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class="alert alert-info">
        <p>
            No server registered yet. Start creating your first !
        </p>
    </div>
    {% endfor %}

