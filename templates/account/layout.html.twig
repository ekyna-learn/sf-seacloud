{% extends 'base.html.twig' %}

{% block title %}About{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>{{ section }}</h2>
                <ol>
                    <li><a href="/">Home</a></li>
                    <li>{{ section }}</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs Section -->

    {% include 'fragment/flashes.html.twig' %}

    <section id="dashboard" class="inner-page">
        <div class="container">

            <div class="row gy-4">

                <div class="col-md-4 col-lg-3">
                    <div class="list-group pe-5">
                        <a href="{{ path('account_dashboard') }}" class="list-group-item list-group-item-action">
                            Dashboard
                        </a>
                        <a href="{{ path('account_profile') }}" class="list-group-item list-group-item-action">
                            My profil
                        </a>
                        <a href="{{ path('security_logout') }}" class="list-group-item list-group-item-action">
                            Logout
                        </a>
                    </div>
                </div>

                <div class="col-md-8 col-lg-9">
                    {% block account %}{% endblock %}
                </div>

            </div>

        </div>
    </section>
</main>
{% endblock %}
